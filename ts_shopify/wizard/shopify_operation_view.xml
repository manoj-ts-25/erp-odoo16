<?xml version="1.0" encoding="UTF-8" ?>


<odoo>
       <record id="view_base_shopify_operation_form" model="ir.ui.view">
            <field name="name">operation</field>
            <field name="model">shopify.operation</field>
            <field name="arch" type="xml">
           <form>
            <header>
            </header>
                    <sheet>
                        <group>
                             <group>
                              <field name="shopify_instance_id" />
                        </group>
                            <group>
                          <field name="operation"/>
                                <field name="export_operation"/>
                            </group>

                        </group>
                          <div style="text-align: center; margin: 20px 0;">
                    <img src="/ts_shopify/static/description/import_export.png"
                         style="max-width:100%; height:auto; border-radius:8px;"/>
                     </div>
                    </sheet>
               <footer>
                        <button name="execute_operation" class="btn-primary" type="object" string="Execute">
                        </button>
                         <button string="Cancel" class="btn-secondary" special="cancel"/>
               </footer>
           </form>
            </field>
       </record>


    <record id="shopify_operation_menu_action" model="ir.actions.act_window">
            <field name="name">Operation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shopify.operation</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


         <menuitem id="shopify_operation" name="Operation" parent="shopify_menu"
                  action="ts_shopify.shopify_operation_menu_action"/>
</odoo>