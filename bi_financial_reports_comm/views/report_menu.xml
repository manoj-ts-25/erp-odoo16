    </record>

    <record id="partner_ledger_action" model="ir.actions.client">
        <field name="name">Partner Ledger</field>
        <field name="tag">partner_ledger_report_tag</field>
        <field name="context">{'report': 'partner_ledger'}</field>
    </record>

    <record id="analytic_report_action" model="ir.actions.client">
        <field name="name">Analytic Account Report</field>
        <field name="tag">analytic_report_tag</field>
        <field name="context">{'report': 'analytic_report'}</field>
