        <menuitem id="menu_analytic_report" name="Analytic Account Report" action="analytic_report_action"/>
        <menuitem id="menu_trial_balance" name="Trial Balance" action="trial_balance_action"/>
        <menuitem id="menu_partner_ageing_report" name="Partner Ageing" action="partner_ageing_report_action"/>
