<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_ageing_form" model="ir.ui.view">
        <field name="name">partner.ageing.form</field>
        <field name="model">partner.ageing</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="on_date"/>
                        <field name="based_on" widget="radio"/>
                        <newline/>
                    </group>
                    <group>
                        <field name="account_type"/>
                        <field name="partner_tag_ids"  widget="many2many_tags"/>
                        <newline/>
                    </group>
                </group>
                <group>
                    <field name="partner_ids" widget="many2many_tags" string="Partners" />
                    <field name="account_ids" widget="many2many_tags"/>
                    <field name="period_length" class="oe_inline"/>
                   
                </group>
                <footer>
                    <button name="action_apply_filters_ageing" type="object" class="oe_highlight" string="Apply"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_partner_ageing_report" model="ir.actions.act_window">
        <field name="name">Partner Ageing</field>
        <field name="res_model">partner.ageing</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'report': 'partner_ageing'}</field>
    </record>
</odoo>
