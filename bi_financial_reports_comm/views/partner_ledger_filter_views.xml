<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_ledger_form" model="ir.ui.view">
        <field name="name">partner.ledger.report.form</field>
        <field name="model">partner.ledger.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="target_move" widget="radio"/>
                        <newline/>
                    </group>
                    <group>
                        <field name="date_to"/>
                        <field name="journal_ids" widget="many2many_tags"/>
                        <newline/>
                    </group>
                </group>
                <group>
                    <field name="partner_ids" widget="many2many_tags" string="Partners" />
                    <field name="account_ids" widget="many2many_tags"/>
                    <field name="account_tag_ids" widget="many2many_tags"/>
                    <field name="partner_tag_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_apply_filters_partner" type="object" class="oe_highlight" string="Apply"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_partner_ledger" model="ir.actions.act_window">
        <field name="name">Partner Ledger Report</field>
        <field name="res_model">partner.ledger.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'report': 'partner_ledger'}</field>
    </record>
</odoo>
