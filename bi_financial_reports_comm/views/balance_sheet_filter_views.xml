<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_balance_sheet_form" model="ir.ui.view">
        <field name="name">balance.sheet.form</field>
        <field name="model">balance.sheet.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from" attrs="{'readonly': [('date_range', '!=', False)]}" force_save="1" required="1"/>
                        <field name="date_range"/>
                        
                        <newline/>
                    </group>
                    <group>
                        <field name="date_to" attrs="{'readonly': [('date_range', '!=', False)]}" force_save="1" required="1"/>
                        <field name="journal_ids" widget="many2many_tags"/>
                        <newline/>
                    </group>
                </group>

                <footer>
                    <button name="action_apply_filters_balancesheet" type="object" class="oe_highlight" string="Apply"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_balance_sheet" model="ir.actions.act_window">
        <field name="name">Balance Sheet</field>
        <field name="res_model">balance.sheet.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'report': 'balance_sheet'}</field>
    </record>
</odoo>
